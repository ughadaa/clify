@{
    var Commands = (List<CommandModel>)ViewData["Commands"];
}

<main id="page" class="mainnn">
    <input type="Submit" onclick="location.href='@Url.Action("Create","Command")'" value="+" class="addbtn" />

    <p class="side-bar-tl">Commands</p>
    <div class="side-bar">
        <a href="/Command">System</a>
        <a href="/Command/Docker">Docker</a>
        <a href="/Command/Git">Git</a>

    </div>



    <section class="cards">


        <div class="topcard">
            <div class="topcard__content">


                <div class="topcard-body">
                    <div class="topcard__image-container">
                        <img style=" width: 65px; " src="images/unarchive_24px_rounded.svg" />
                    </div>

